@page "/event"
@rendermode InteractiveServer
<h3>Event</h3>

<div>
    <button class="btn btn-secondary" onclick="javascript:alert('Clicou no botão JS')">Clique-me JS</button>
    <button class="btn btn-primary" @onclick="ClickButton">Clique-me (Blazor)</button>
    @Textoone
</div>

<div class="mt-3">
    <button class="btn btn-success" @onclick="@((e)=> { Texto = $"Posição do clique: x={e.ScreenX} y={e.ScreenY}";})">Clique-me </button>
    @Texto
</div>
@code {
    private string Textoone { get; set; }
    private string Texto { get; set; }
    public void ClickButton( MouseEventArgs e)
    {
        Texto = $"Possição do clique: x={e.ScreenX} y={e.ScreenY}";
    }
}
