@rendermode InteractiveServer


<div class="card" style="width: 18rem;">
    @if(CardHeader != null)
    {
        <div class="card-header">
            @CardHeader
        </div>
    }
    @if(ChildContent!=null || Titleb!= null)
    {
            <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
    }
    <div class="card-body">
       
        @if (CardText != null)
        {
            @CardText
        }else if(ChildContent != null)
        {
            @ChildContent
        }else{
             <h5 class="card-title">@Titleb</h5>
            <p class="card-text">@Descriptionb</p>
            <button class="btn btn-primary" @onclick="EventClick">@ButtonTextb</button>
        }
    </div>

    @if(CardFooter != null)
    {
        <div class="card-footer text-body-secondary">
            @CardFooter
        </div>
    }

    

   
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment CardHeader { get; set; }
    [Parameter]
    public RenderFragment CardText { get; set; }
    [Parameter]
    public RenderFragment CardFooter { get; set; }

    [Parameter]
    public string? Titleb { get; set; }

    [Parameter]
    public string? Descriptionb { get; set; }

    [Parameter]
    public string? ButtonTextb { get; set; }

    [Parameter]
    public EventCallback <MouseEventArgs> EventClick { get; set; }

    public void OnClick()
    {
        Titleb = "Botão Clicado";
    }
}
